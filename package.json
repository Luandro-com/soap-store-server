{
  "name": "store-server",
  "scripts": {
    "production": "node api/index.js",
    "start": "nodemon -e js,graphql -x node -r dotenv/config api/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config api/index.js",
    "playground": "graphql playground",
    "dev": "npm-run-all --parallel start playground",
    "docker:build": "docker build -t store-server .",
    "docker:run": "docker run  -p 4000:4000 -itd store-server",
    "docker": "npm run docker:build && npm run docker:run",
    "deploy": "prisma deploy -e .env.staging && now",
    "deploy:prod": "now",
    "seed": "node -r dotenv/config database/seed",
    "reset": "prisma reset -f && prisma deploy && prisma seed && graphql get-schema --project database && npm test",
    "run-test": "wait-on http://localhost:4000 && NODE_ENV=production node ./test/index.test.js | tap-spec",
    "test": "npm-run-all --parallel start run-test"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-server": "^2.4.8",
    "apollo-server-express": "^2.4.8",
    "apollo-upload-client": "^10.0.0",
    "aws-sdk": "^2.418.0",
    "bcryptjs": "^2.4.3",
    "camelcase": "^5.2.0",
    "cielo": "^1.1.0",
    "cors": "^2.8.5",
    "graphql-middleware-forward-binding": "^1.3.2",
    "graphql-middleware-sentry": "^3.1.1",
    "graphql-shield": "^5.3.0",
    "graphql-upload": "^8.0.4",
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "^8.5.0",
    "lowdb": "^1.0.0",
    "mailgun.js": "^2.0.1",
    "nodemailer": "^5.1.1",
    "pagseguro.js": "latest",
    "prisma-binding": "^2.3.5",
    "shortid": "^2.2.14",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "dotenv": "^6.2.0",
    "faker": "^4.1.0",
    "graphql-cli": "^3.0.11",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prisma": "^1.28.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.2",
    "validator": "^10.11.0",
    "wait-on": "^3.2.0"
  }
}
